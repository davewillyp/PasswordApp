<Window x:Class="PasswordApp.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordApp"
        mc:Ignorable="d"
        Title="Window1" Height="150" Width="500" WindowStyle="None" ResizeMode="NoResize" Background="#FF404144" WindowStartupLocation="CenterScreen" BorderBrush="#FFA5A5A5" BorderThickness="1" MouseDown="Window_MouseDown">
    <Grid HorizontalAlignment="Left" Height="150" VerticalAlignment="Top" Width="500" Margin="0,0,-2,-2">
        <Label x:Name="lblPasswordText" Content="Password Changed To:" HorizontalAlignment="Left" Margin="126,45,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White"/>
        <Label x:Name="lblNewPassword" Content="New Password" HorizontalAlignment="Left" Margin="292,45,0,0" VerticalAlignment="Top" Foreground="White" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="btnOk" Content="OK" Margin="212,106,213,19" Click="BtnOk_Click" Background="#FFA5A5A5" Foreground="White" Padding="1" BorderThickness="0"/>
        <Image HorizontalAlignment="Left" Height="61" Margin="51,31,0,0" VerticalAlignment="Top" Width="61" Source="images/Success.png"/>
    </Grid>
</Window>
